{
  "name": "@lunde/deploy-react-app",
  "version": "1.0.0",
  "author": "Jared Lunde <jared@BeStellar.co> (https://jaredLunde.com)",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "bin": {
    "deploy-react-app": "dist/bin.js"
  },
  "files": [
    "/dist"
  ],
  "description": "Several deployment strategies for React apps",
  "keywords": [
    "deploy react-app"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@lunde/babel-preset-es": "latest",
    "babel-eslint": "latest",
    "cross-env": "latest",
    "eslint": "latest",
    "eslint-import-resolver-jest": "latest",
    "eslint-plugin-jest": "latest",
    "husky": "latest",
    "jest": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "pretty-quick": "latest",
    "rimraf": "latest"
  },
  "dependencies": {},
  "peerDependencies": {},
  "scripts": {
    "build": "babel src -d dist -x .js --ignore \"**/*.test.js\",\"**/test.js\" --delete-dir-on-start",
    "format": "npm run format:cjs && npm run format:es && npm run format:src",
    "format:cjs": "prettier --write \"dist/**/*.js\"",
    "format:src": "prettier --write \"src/**/*.js\"",
    "lint": "eslint src",
    "prepublishOnly": "npm run lint && npm run test && npm run build && npm run format",
    "test": "jest",
    "validate": "npm run lint && npm run test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "pretty-quick --staged"
    ]
  },
  "homepage": "https://github.com/jaredLunde/lunde/tree/master/packages/deploy-react-app#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaredLunde/lunde.git"
  },
  "bugs": {
    "url": "https://github.com/jaredLunde/lunde/issues"
  }
}
