{
  "name": "@lunde/render-react-app",
  "version": "1.0.2",
  "author": "Jared Lunde <jared@BeStellar.co> (https://jaredLunde.com)",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "files": [
    "/createRenderer.js",
    "/createStaticRenderer.js",
    "/createStreamingRenderer.js",
    "/utils.js"
  ],
  "description": "A package for rendering React apps on the server",
  "keywords": [
    "render react app",
    "ssr",
    "server render",
    "react ssr",
    "react server renderer",
    "react streaming renderer",
    "micro",
    "react"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@lunde/babel-preset-es": "^1.0.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^6.2.2",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-jest": "^22.16.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "rimraf": "^3.0.0",
    "webpack": "^4.39.3"
  },
  "dependencies": {
    "cookies": "^0.7.3",
    "http-status": "^1.3.2",
    "micro": "^9.3.4"
  },
  "peerDependencies": {
    "react-dom": "^16.9.0"
  },
  "scripts": {
    "build": "babel src -d ./ -x .js --ignore \"**/*.test.js\",\"**/test.js\"",
    "format": "npm run format:cjs && npm run format:src",
    "format:cjs": "prettier --write \"./*.js\"",
    "format:src": "prettier --write \"src/**/*.js\"",
    "lint": "eslint src",
    "prepublishOnly": "npm run lint && npm run test && npm run build && npm run format",
    "test": "jest",
    "validate": "npm run lint && npm run test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "pretty-quick --staged"
    ]
  },
  "homepage": "https://github.com/jaredLunde/lunde/tree/master/packages/render-react-app#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaredLunde/lunde.git"
  },
  "bugs": {
    "url": "https://github.com/jaredLunde/lunde/issues"
  }
}
